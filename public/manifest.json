{
  "manifest_version": 3,
  "name": "Easel On Chrome Extension",
  "version": "0.1.0",
  "description": "Capture live snapshots from around the web",
  "icons": {
    "16": "icons/favicon-16.png",
    "32": "icons/favicon-32.png",
    "48": "icons/favicon-96.png",
    "128": "icons/favicon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Easel On Chrome - chrome extension",
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "cookies"
  ],
  "externally_connectable": {
    "matches": [
      "https://localhost:3000/*",
      "http://localhost:3000/*",
      "https://www.easelonchrome.com/*"
    ]
  },
  "content_scripts": []
}